import tkinter as tk
from tkinter import messagebox
import json
import os

TODO_FILE = 'todo.json'

def load_tasks():
    if os.path.exists(TODO_FILE):
        with open(TODO_FILE, 'r') as f:
            return json.load(f)
    return []

def save_tasks(tasks):
    with open(TODO_FILE, 'w') as f:
        json.dump(tasks, f)

def refresh_task_listbox():
    tasks = load_tasks()
    listbox.delete(0, tk.END)
    for idx, task in enumerate(tasks, 1):
        status = "✓" if task["done"] else "✗"
        listbox.insert(tk.END, f"{idx}. {task['task']} - {status}")

def add_task():
    task = entry.get()
    if task:
        tasks = load_tasks()
        tasks.append({"task": task, "done": False})
        save_tasks(tasks)
        entry.delete(0, tk.END)
        refresh_task_listbox()
    else:
        messagebox.showwarning("Input Error", "Please enter a task.")

def mark_done():
    selected_task = listbox.curselection()
    if selected_task:
        task_id = selected_task[0]
        tasks = load_tasks()
        tasks[task_id]["done"] = True
        save_tasks(tasks)
        refresh_task_listbox()
    else:
        messagebox.showwarning("Selection Error", "Please select a task to mark as done.")

def delete_task():
    selected_task = listbox.curselection()
    if selected_task:
        task_id = selected_task[0]
        tasks = load_tasks()
        tasks.pop(task_id)
        save_tasks(tasks)
        refresh_task_listbox()
    else:
        messagebox.showwarning("Selection Error", "Please select a task to delete.")

# GUI Setup
root = tk.Tk()
root.title("To-Do List")

frame = tk.Frame(root)
frame.pack(pady=10)

entry = tk.Entry(frame, width=30)
entry.pack(side=tk.LEFT, padx=10)

add_button = tk.Button(frame, text="Add Task", command=add_task)
add_button.pack(side=tk.LEFT)

listbox = tk.Listbox(root, width=50)
listbox.pack(pady=10)

done_button = tk.Button(root, text="Mark as Done", command=mark_done)
done_button.pack(side=tk.LEFT, padx=10)

delete_button = tk.Button(root, text="Delete Task", command=delete_task)
delete_button.pack(side=tk.RIGHT, padx=10)

refresh_task_listbox()

root.mainloop()
